@using Dominio;
@model Miembro;
@{
    ViewData["Title"] = "Login";
}

<div class="card" style="width: 20rem; margin: 70px auto;">
    <div class="card-header">
        <h3>Login</h3>
    </div>
    <div class="card-body">
        <form action="~/Usuarios/ProcesarRegister" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="Email" value="@Model.Email" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" name="Contrasenia" class="form-control" value="@Model.Contrasenia" />
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="Nombre" class="form-control" value="@Model.Nombre" />
            </div>
            <div class="form-group">
                <label>Apellido</label>
                <input type="text" name="Apellido" class="form-control" value="@Model.Apellido" />
            </div>
            <div class="form-group">
                <label>Fecha de nacimiento</label>
                <input type="date" name="FechaNacimiento" class="form-control" value="@Model.FechaNacimiento" />
            </div>
            <input type="submit" value="Registrarse" class="btn btn-secondary" />
        </form>

    </div>
</div>

<br />

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

